---
interface Props {
	rating: number;
	size?: 'sm' | 'md' | 'lg';
}
const { rating, size = 'md' } = Astro.props;
---

<div class:list={`rating rating-${size}`}>
  {Array.from({ length: rating }).map((_, index) => (
    <input type="radio" name="rating-2" class="mask mask-star-2 bg-warning pointer-events-none"/>
  ))}
</div>